[alias]
    a   = add -A
    b   = branch
    bc  = checkout -b
    bl  = branch -v
    bL  = branch -av
    bm  = branch -m
    bM  = branch -M
    bs  = show-branch
    bS  = show-branch -a
    bx  = branch -d
    bX  = branch -D
    c   = !git add -A && git commit -S --signoff -m
    cc  = rev-list HEAD --count
    co  = checkout
    cO  = checkout HEAD --
    d   = diff --color-words
    f   = fetch
    fm  = pull
    fo  = fetch origin
    l   = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %C(white)%s %Creset- %C(bold blue)%an%Creset, %C(green)%ar%Creset'
    ll  = log --stat --abbrev-commit
    m   = merge
    mo  = merge origin/master
    p   = push
    pa  = push --all
    pom = push -u origin master
    pt  = push --tags
    r   = remote add origin
    ra  = rebase --abort
    rb  = rebase
    rc  = rebase --continue
    ri  = rebase --interactive
    rom = rebase origin/master
    rs  = rebase --skip
    sc  = shortlog -s
    st  = status
    t   = tag

[branch "master"]
    merge  = refs/heads/master
    remote = origin

[credential]
    helper = winstore

[color]
    branch      = always
    diff        = always
    grep        = always
    interactive = always
    pager       = true
    showbranch  = auto
    status      = auto
    ui          = always

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]
    frag       = magenta
    meta       = yellow
    new        = green
    old        = red
    whitespace = white reverse

[color "interactive"]
    error = red bold

[color "status"]
    added     = yellow
    branch    = magenta
    changed   = green
    untracked = cyan

[core]
    autocrlf    = false
    compression = 9
    editor      = vim
    filemode    = false
    pager       = less -FRSX
    whitespace  = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[push]
    default = matching

[repack]
    usedeltabaseoffset = true

[url "git@github.com:"]
    insteadof = github:

